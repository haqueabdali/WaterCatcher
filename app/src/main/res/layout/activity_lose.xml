<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/loseJar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sad_trophy"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/loseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="😢 Oh no… Your fish looks weak and whispers:“I’m still thirsty… I needed more water…”But don’t give up! Try again and save her next time 💧"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@id/loseJar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
